@model ProjectSemester3.Models.Role

@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

@Html.Raw(TempData["msg"])
@{var index = 1;}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>Roles</h1>
                    <br />
                    <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" data-target="#myModal">
                        <i class="zmdi zmdi-plus"></i>Add new Role
                    </button>
                    <br /><br />
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Serial</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in ViewBag.roles)
                            {

                                <tr onclick="location.href = '@Url.Action("edit", "roles", new { id=role.RoleId })'">
                                    <td>@index</td>
                                    <td>@role.RoleName</td>
                                    <td>@role.Desc</td>
                                    <td>

                                        <a type="button" class="btn btn-success" asp-action="edit" asp-route-id="@role.RoleId"><i class="fas fa-edit"></i></a>
                                        <a type="button" class="btn btn-danger" asp-action="delete" asp-route-id="@role.RoleId" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>

                                    </td>
                                </tr>

                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Create Role</h4>

            </div>
            <div class="modal-body">
                <form asp-action="create" method="post" name="Form" onsubmit="return validateForm();">

                    <div class="form-group">
                        <label for="NameRole">NameRole</label>
                        <input type="text" class="form-control" asp-for="RoleName" name="rolename" />
                    </div>


                    <div class="form-group">
                        <label asp-for="Desc">Description</label>
                        <input type="text" class="form-control" asp-for="Desc" name="desc" />
                    </div>
                    <input type="submit" value="ADD" class="btn btn-primary" />
                </form>
            </div>

        </div>
    </div>
</div>
<script>
    function validateForm() {
        var rolename = document.forms["Form"]["rolename"].value;
        var desc = document.forms["Form"]["desc"].value;
        if (rolename == null || rolename == "") {
            alert("Please Fill Role Name Field");
            return false;
        }
        if (desc == null || desc == "") {
            alert("Please Fill Description Field");
            return false;
        }
    }
</script>



