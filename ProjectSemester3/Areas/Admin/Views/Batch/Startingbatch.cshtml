    <script>


        try {

            // single bar chart
            var ctx = document.getElementById("batch");
            if (ctx) {
                ctx.height = 150;
                var myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ["Total student in course", "Student with scholarship"],
                        datasets: [
                            {
                                label: "Score statistics",
                                data: [@ViewBag.totalstudent, @ViewBag.scholarshipstudentcount],
                                borderColor: "rgba(0,255,0,0.3)",
                                borderWidth: "0",
                                backgroundColor: ["rgba(0, 123, 255, 0.5)", "rgba(0,255,0,0.3)"]
                            }
                        ]
                    },
                    options: {
                        legend: {
                            position: 'top',
                            labels: {
                                fontFamily: 'Poppins'
                            }

                        },
                        scales: {
                            xAxes: [{
                                ticks: {
                                    fontFamily: "Poppins"

                                }
                            }],
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true,
                                    fontFamily: "Poppins"
                                }
                            }]
                        }
                    }
                });
            }

        } catch (error) {
            console.log(error);
        }

