                                                    <th>Faculty Name</th>
                                                    <th>Schedule</th>

                                                </tr>

                                            </thead>
                                            <tbody>
                                                @foreach (var schedule in ViewBag.schedules)
                                                {
                                                    <tr>
                                                        <td>@schedule.Subject.SubjectName</td>
                                                        <td>@schedule.Faculty.Fullname</td>

                                                        <td>@schedule.TimeDay @schedule.StartDate - @schedule.EndDate</td>
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
