@model ProjectSemester3.Models.FeedbackFaculty

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@Html.Raw(TempData["msg"])
@{var index = 1;}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>FeedBack Faculty</h1>
                    <br />
                    <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" data-target="#myModal">
                        <i class="zmdi zmdi-plus"></i>Add new FeedBack Faculty
                    </button>
                    <br /><br />
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Serial</th>
                                <th>Feedback</th>
                                <th>Faculty</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feedbackfaculty in ViewBag.feedbackFacultys)
                            {
                                <tr onclick="location.href = '@Url.Action("edit", "feedbackfaculties", new { feedbackid=feedbackfaculty.FeedbackId, facultyid = feedbackfaculty.FacultyId })'">
                                    <td>@index</td>
                                    <td>@feedbackfaculty.FeedbackId</td>
                                    <td>@feedbackfaculty.Faculty.Fullname</td>

                                    <td>

                                        <a type="button" class="btn btn-success" asp-action="edit" asp-route-feedbackid="@feedbackfaculty.FeedbackId" asp-route-facultyid="@feedbackfaculty.FacultyId"><i class="fas fa-edit"></i></a>
                                        <a type="button" class="btn btn-danger" asp-action="delete" asp-route-feedbackid="@feedbackfaculty.FeedbackId" asp-route-facultyid="@feedbackfaculty.FacultyId" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>

                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Create Feedback Faculty</h4>

            </div>
            <div class="modal-body">
                <form asp-controller="feedbackfaculties" asp-action="create" method="post" name="Form" onsubmit="return validateForm();">
                    <div class="form-group">
                        <label asp-for="FeedbackId" class="control-label"></label>
                        <select asp-for="FeedbackId" class="form-control" asp-items="ViewBag.FeedbackId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FacultyId" class="control-label"></label>
                        <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
                    </div>
                    <input type="submit" value="ADD" class="btn btn-primary" />
                </form>
            </div>

        </div>
    </div>
</div>
