@model ProjectSemester3.Models.Professional

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Raw(TempData["msg"])
@{var index = 1;}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>Professional</h1>
                    <br />
                    <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" data-target="#myModal">
                        <i class="zmdi zmdi-plus"></i>Add new Professional
                    </button>
                    <br /><br />
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Serial</th>
                                <th>Faculty</th>
                                <th>Subject</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in ViewBag.professionals)
                            {
                                <tr onclick="location.href = '@Url.Action("details", "professionals", new { facultyid = p.FacultyId, subjectid=p.SubjectId })'">
                                    <td>@index</td>
                                    <td>@p.Faculty.Fullname</td>
                                    <td>@p.Subject.SubjectId</td>
                                    <td>
                                        <a asp-controller="professionals" asp-action="details" asp-route-facultyid="@p.FacultyId" asp-route-subjectid="@p.SubjectId">View</a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Create</h4>
            </div>
            <div class="modal-body">
                <form asp-area="admin" asp-controller="professionals" asp-action="create" method="post" enctype="multipart/form-data" name="Form" onsubmit="return validateForm();">

                    <div class="form-group">
                        <label asp-for="FacultyId" class="control-label">Faculty</label>
                        <input class="form-control" type="text" name="facultyProfess" id="facultyProfess" placeholder="Choose Faculty" asp-for="Faculty.Fullname" required="required" />

                    </div>

                    <div class="form-group">
                        <label asp-for="SubjectId" class="control-label">Subject</label>
                        <select class="form-control" name="subjectProfess" id="subjectProfess" required="required"></select>

                    </div>

                    <br />
                    <input type="submit" value="ADD" class="btn btn-primary" />
                </form>
            </div>

        </div>
    </div>
</div>
