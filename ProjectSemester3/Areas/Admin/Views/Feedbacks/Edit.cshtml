@model ProjectSemester3.Models.Feedback

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <a asp-action="Index"><i class="fa fa-arrow-circle-left" style="font-size: 30px"></i></a>

    <h2>Update Role</h2>

    <hr />
    <div class="row">

        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FeedbackId" />
                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Teaching" class="control-label"></label>
                    <input asp-for="Teaching" class="form-control" />
                    <span asp-validation-for="Teaching" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Exercises" class="control-label"></label>
                    <input asp-for="Exercises" class="form-control" />
                    <span asp-validation-for="Exercises" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherEthics" class="control-label"></label>
                    <input asp-for="TeacherEthics" class="form-control" />
                    <span asp-validation-for="TeacherEthics" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Specialize" class="control-label"></label>
                    <input asp-for="Specialize" class="form-control" />
                    <span asp-validation-for="Specialize" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assiduous" class="control-label"></label>
                    <input asp-for="Assiduous" class="form-control" />
                    <span asp-validation-for="Assiduous" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>


