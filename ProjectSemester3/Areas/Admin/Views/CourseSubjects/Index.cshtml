@model ProjectSemester3.Models.CourseSubject

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@Html.Raw(TempData["msg"])
@{var index = 1;}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1>Course - Subject</h1>
                    <br />
                    <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" data-target="#myModal">
                        <i class="zmdi zmdi-plus"></i>Add new Course-Subject
                    </button>
                    <br /><br />
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Serial</th>
                                <th>Course</th>
                                <th>Subject</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var coursesubject in ViewBag.courseSubjectes)
                            {
                                <tr onclick="location.href = '@Url.Action("edit", "coursesubjectes", new { courseid=coursesubject.CourseId,  subjectid=coursesubject.SubjectId})'">
                                    <td>@index</td>
                                    <td>@coursesubject.Course.CourseName</td>
                                    <td>@coursesubject.Subject.SubjectName</td>
                                    <td>

                                        <a type="button" class="btn btn-success" asp-action="edit" asp-route-courseid="@coursesubject.CourseId" asp-route-subjectid="@coursesubject.SubjectId"><i class="fas fa-edit"></i></a>

                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" coursesubject="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Create Course-Subject</h4>

            </div>
            <div class="modal-body">
                <form asp-action="create" method="post" name="Form" onsubmit="return validateForm();">
                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label"></label>
                        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId" class="control-label"></label>
                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    </div>
                   
                    <input type="submit" value="ADD" class="btn btn-primary" />
                </form>
            </div>

        </div>
    </div>
</div>
