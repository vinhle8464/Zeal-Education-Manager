@model ProjectSemester3.Models.Batch

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <a asp-action="Index"><i class="fa fa-arrow-circle-left" style="font-size: 30px"></i></a>

        <h2>Update Batch</h2>

        <hr />
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CourseId" />
                <input type="hidden" asp-for="ClassId" />
                <div class="form-group">

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gradute" id="graduted" asp-for="Graduate" value="true">
                        <label class="form-check-label" for="gradute" asp-for="Graduate">Gradute &nbsp;</label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="graduate" id="undergraduate" asp-for="Graduate" value="false">
                        <label class="form-check-label" for="undergraduate" asp-for="Graduate">Undergraduate &nbsp;</label>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>


